{
  "name": "whatsapp-web-plus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w api",
    "dev:web": "npm run dev -w web",
    "build": "npm run build -w @whatsapp-web-plus/contracts && npm run build -w @whatsapp-web-plus/db && npm run build -w api && npm run build -w web",
    "build:api": "npm run build -w api",
    "build:web": "npm run build -w web",
    "lint": "npm run lint --workspaces --if-present",
    "test:e2e": "npm run test:e2e -w web",
    "db:migrate": "prisma migrate deploy"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "eslint-config-next": "^16.1.6",
    "prisma": "^7.3.0"
  }
}
