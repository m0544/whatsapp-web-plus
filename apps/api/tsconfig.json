{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./.nest-build",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@whatsapp-web-plus/contracts": ["../../packages/contracts/src"],
      "@whatsapp-web-plus/db": ["../../packages/db/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".nest-build"]
}
