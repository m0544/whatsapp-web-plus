generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model QuickReply {
  id       String @id @default(cuid())
  shortcut String // שם קצר לתבנית (למשל "בדרך")
  content  String // תוכן ההודעה
}
